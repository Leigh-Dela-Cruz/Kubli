<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Encodemessage">

    <ImageView
        android:id="@+id/btnMenu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_menu"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:tint="#8A3FFC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encode Message"
        android:textColor="#8A3FFC"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/btnMenu"
        app:layout_constraintBottom_toBottomOf="@+id/btnMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgLogoTop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_kubli_logo_purple"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnMenu"
        app:layout_constraintBottom_toBottomOf="@+id/btnMenu" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/containerUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#E5E7EB"
        app:layout_constraintTop_toBottomOf="@+id/textTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload an image for Encoding"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/layoutUploadClick"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/bg_dashed_border"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_download"
                    app:tint="#8A3FFC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click or drag an image"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PNG, JPG, or WEBP format"
                    android:textSize="12sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/containerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#E5E7EB"
        app:layout_constraintTop_toBottomOf="@+id/containerUpload">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter text to hide"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/inputText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_dashed_gray"
                android:padding="16dp"
                android:hint="Enter text to hide..."
                android:gravity="top|start"
                android:textSize="14sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHideMessage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Hide message"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#8A3FFC"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_lock"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>