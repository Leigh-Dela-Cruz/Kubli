<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/btnMenu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_menu"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:tint="#8A3FFC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KUBLI"
        android:textColor="#8A3FFC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toTopOf="@+id/btnMenu"
        app:layout_constraintBottom_toBottomOf="@+id/btnMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgLogoTop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_kubli_logo_purple"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnMenu"
        app:layout_constraintBottom_toBottomOf="@+id/btnMenu" />

    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi! [Username]"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMenu"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kamusta! Let's first assist you with your account setup experience. Let's Go!"
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textGreeting"
        app:layout_constraintStart_toStartOf="@+id/textGreeting"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardEncode"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:background="@drawable/bg_card_encode_custom"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:padding="24dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_lock"
            app:tint="#E0C2FF"
            android:background="@drawable/bg_circle_translucent"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encode Message"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide a secret message"
                android:textColor="#E0C2FF"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardDecode"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:background="@drawable/bg_card_gray"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:padding="24dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/cardEncode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/search_dashboard"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.45"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_lock_open"
            app:tint="#FFFFFF"
            android:background="@drawable/bg_circle_purple_solid"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decode Message"
                android:textColor="#8A3FFC"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extract hidden data"
                android:textColor="#6B7280"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#F8F9FA"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/nav_item_colors"
            app:itemTextColor="@color/nav_item_colors"
            app:itemTextAppearanceActive="@style/BottomNavTextSize"
            app:itemTextAppearanceInactive="@style/BottomNavTextSize"
            app:labelVisibilityMode="labeled"
            app:itemIconSize="24dp"
            app:itemPaddingTop="8dp"
            app:itemPaddingBottom="8dp"
            app:elevation="0dp" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>