<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Kubli" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/kubli_purple</item>
        <item name="android:statusBarColor">@color/kubli_purple</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/kubli_purple</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/logowhite</item>

        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Kubli</item>
    </style>

    <style name="BottomNavTextSize">
        <item name="android:textSize">10sp</item> <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>